{
  "name": "Trust this news",
  "version": "0.1",
  "description": "Trust this news - chrome extension",
  "permissions": ["activeTab", "tabs", "http://dev-chrome-extension.pantheonsite.io/", "*://*/*"],
  "icons":{
    "128": "img/icon128.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "img/icon16.png",
    "default_title": "Trusted news"
  },
  "manifest_version": 2
}